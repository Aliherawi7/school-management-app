{
  "name": "urdokhan-uchool-app",
  "version": "1.0.0",
  "author": "Ali Herawi",
  "publisher": "www.atomcode.org | 0797608705",
  "description": "Urdokhan-School-App",
  "private": true,
  "main": "src/main/main.js",
  "homepage": "./",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "browserify-fs": "^1.0.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "firebase": "^11.2.0",
    "formik": "^2.4.5",
    "hijri-date": "^0.2.2",
    "i18next": "^23.7.7",
    "jszip": "^3.10.1",
    "lokijs": "^1.5.12",
    "path-browserify": "^1.0.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "react-multi-date-picker": "^4.5.2",
    "react-router-dom": "^6.11.1",
    "react-scripts": "^5.0.1",
    "react-to-print": "^2.15.1",
    "react-toastify": "^10.0.4",
    "react-tooltip": "^5.27.1",
    "shamsi-date-converter": "^1.0.5",
    "systeminformation": "^5.23.21",
    "use-react-router-breadcrumbs": "^4.0.1",
    "usehooks-ts": "^3.1.0",
    "wait-on": "^8.0.1",
    "web-vitals": "^2.1.4",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@types/crypto-js": "^4.2.2",
    "concurrently": "^9.1.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "start": "cross-env BROWSER=none concurrently \"npm run react-start\" \"npm run electron-start\"",
    "react-start": "react-scripts start",
    "electron-start": "electron .",
    "build": "react-scripts build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "electron-pack": "electron-builder --dir",
    "electron-publish": "electron-builder --publish always",
    "electron": "electron .",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "package": "electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "org.atomcode.cmsapp",
    "productName": "Urdokhan-School-App",
    "directories": {
      "output": "dist"
    },
    "compression": "maximum",
    "files": [
      "build/**/*",
      "src/main/**/*",
      "src/assets/**/*"
    ],
    "extraMetadata": {
      "main": "src/main/main.js"
    },
    "extraFiles": [
      {
        "from": "src/main/database",
        "to": "resources/database"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "src/assets/img/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/img/atomcode_icon_256x256.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "aliherawi7",
        "repo": "Urdokhan-School-App-repo"
      }
    ]
  }
}
